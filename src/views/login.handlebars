    <h2>Login</h2>
    <hr>
    <form action="/api/sessions/login" method="post">

        {{#if error}}
        <div style="color: red;">{{error}}</div>
        {{/if}}

        {{#if mensaje}}
        <div style="color: green;">{{mensaje}}</div>
        {{/if}}

        <input type="email" name="email" placeholder="email">
